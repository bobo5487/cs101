#include <stdio.h>

#include <stdlib.h>



void cmove(int n, char a, char b, char c)

{  

FILE*fp;

fp = fopen("hanoi.txt","w");     



	if(n==1){

		fprintf(fp,"Move disk %d from %c to %c\n", 1, a, c);

	}else{

		cmove(n-1, a, c, b);

		fprintf(fp,"Move disk %d from %c to %c\n", n, a, c);

		cmove(n-1, b, a, c);

		

	}

fclose(fp);



}	

void cmove(int,char,char,char);

int main(){

	

	int n;

	n=16;

	cmove(n, 'a', 'b', 'c');

	return 0;

} 



